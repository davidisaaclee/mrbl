body
  padding 0
  margin 0
  left 0
  top 0
  // overflow hidden

#container
  box-sizing border-box
  padding 40px
  background-color black
  width 100vw
  height 100vh

.mg-app
  // box-sizing border-box
  position relative
  display flex
  align-items center
  justify-content center
  height 100%
  width 100%


.mg-field
  position absolute
  left 0
  top 0
  z-index 0

.mg-inspector
  transition all 0.5s

.mg-inspector.visible
  opacity 1
  z-index 2

.mg-inspector.hidden
  opacity 0
  z-index -1